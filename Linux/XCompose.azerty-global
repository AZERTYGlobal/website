# This file extends the standard Compose sequences with AZERTY Global dead keys.
# Copy to ~/.XCompose and log out/in to activate.
#
# To use: include this file in your ~/.XCompose with:
#   include "%L"
#   include "/path/to/XCompose.azerty-global"

# =============================================================================
# DEAD CIRCUMFLEX (^) - Extended sequences
# =============================================================================
# Standard circumflex accents are handled by XKB dead_circumflex
# These are the bonus mappings for French majuscules and shortcuts

<dead_circumflex> <eacute>           : "É"   # ^ + é → É
<dead_circumflex> <egrave>           : "È"   # ^ + è → È
<dead_circumflex> <ccedilla>         : "Ç"   # ^ + ç → Ç
<dead_circumflex> <agrave>           : "À"   # ^ + à → À

# Polish, Czech, Romanian shortcuts
<dead_circumflex> <d>                : "ę"   Eogonek
<dead_circumflex> <D>                : "Ę"   EOGONEK
<dead_circumflex> <f>                : "č"   ccaron
<dead_circumflex> <F>                : "Č"   Ccaron
<dead_circumflex> <l>                : "ł"   lstroke
<dead_circumflex> <L>                : "Ł"   Lstroke
<dead_circumflex> <m>                : "ż"   zabovedot
<dead_circumflex> <M>                : "Ż"   Zabovedot
<dead_circumflex> <n>                : "ñ"   ntilde
<dead_circumflex> <N>                : "Ñ"   Ntilde
<dead_circumflex> <p>                : "ã"   atilde
<dead_circumflex> <P>                : "Ã"   Atilde
<dead_circumflex> <q>                : "ą"   aogonek
<dead_circumflex> <Q>                : "Ą"   Aogonek
<dead_circumflex> <r>                : "ă"   abreve
<dead_circumflex> <R>                : "Ă"   Abreve
<dead_circumflex> <t>                : "ș"   U0219
<dead_circumflex> <T>                : "Ș"   U0218
<dead_circumflex> <x>                : "š"   scaron
<dead_circumflex> <X>                : "Š"   Scaron

# Superscripts (for x²)
<dead_circumflex> <0>                : "⁰"   U2070
<dead_circumflex> <1>                : "¹"   onesuperior
<dead_circumflex> <2>                : "²"   twosuperior
<dead_circumflex> <3>                : "³"   threesuperior
<dead_circumflex> <4>                : "⁴"   U2074
<dead_circumflex> <5>                : "⁵"   U2075
<dead_circumflex> <6>                : "⁶"   U2076
<dead_circumflex> <7>                : "⁷"   U2077
<dead_circumflex> <8>                : "⁸"   U2078
<dead_circumflex> <9>                : "⁹"   U2079
<dead_circumflex> <plus>             : "⁺"   U207A
<dead_circumflex> <minus>            : "⁻"   U207B
<dead_circumflex> <equal>            : "⁼"   U207C
<dead_circumflex> <parenleft>        : "⁽"   U207D
<dead_circumflex> <parenright>       : "⁾"   U207E

# =============================================================================
# DEAD ACUTE (´) - Extended sequences
# =============================================================================
# Turkish, Nordic, other shortcuts
<dead_acute> <d>                     : "ş"   U015F
<dead_acute> <D>                     : "Ş"   U015E
<dead_acute> <f>                     : "ğ"   gbreve
<dead_acute> <F>                     : "Ğ"   Gbreve
